@model Domain.Entities.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Nav.cshtml";
}
<div class="col-md-3 col-lg-3 col-sm-3">
    @using (Html.BeginForm("Login", "User", new { htmlAttributes = new { @class = "form-horizontal" } }))
    {
        <fieldset>
            <div class="form-group">
                <div class="input-group margin-bottom-sm">
                    <span class="input-group-addon"><i class="fa fa-envelope-o fa-fw" aria-hidden="true"></i></span>
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                </div>
            </div>
            <div class="form-group">
                <div class="input-group">
                    <span class="input-group-addon"><i class="fa fa-key fa-fw" aria-hidden="true"></i></span>
                    @Html.PasswordFor(model => model.Password, new { htmlAttributes = new { @lass = "form-control" } })
                </div>
            </div>
            
            <div class="form-group">
                <button class="btn btn-success " type="submit"> <i class="fa fa-sign-in " aria-hidden="true"></i> Войти</button>
                <a class="btn btn-success " href="User/Registration" > <i class="fa fa-address-card " aria-hidden="true"></i> Регистрация</a>
            </div>
        </fieldset>
    }
</div>
<div class="col-md-1 col-lg-1 col-sm-1 vcenter"></div>
<div class="col-md-8 col-lg-8 col-sm-8 vcenter">
    <div class="centering">
        <img src="/img/semya.jpg" width="604" height="402" class="img-rounded img-responsive" alt="Responsive image">
        <p class="text-center text-success">
            <h2 class="text-success">Дабро пожаловать в BigFamily</h2>
        </p>
    </div>
</div>

