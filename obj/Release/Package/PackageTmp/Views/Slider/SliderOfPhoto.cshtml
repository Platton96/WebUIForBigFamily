@model WebUI.Models.PhotoModelView
           hello
<div id="carousel" class="carousel slide">
    <!--Индикаторы слайдов-->
    <ol class="carousel-indicators">
        @for (int i = 0; i < Model.Photos.Count(); i++)
        {
            if (i == 0)
            {
                <li class="active" data-target="#carousel" data-slide-to="@i"></li>
            }
            else
            {
                <li data-target="#carousel" data-slide-to="@i"></li>
            }
        }
    </ol>
 
    <!--/Индикаторы слайдов-->
    <!--Слайды-->
    <div class="carousel-inner">
        @{string activeFurstItem = "active";}
        @foreach (var item in Model.Photos)
        {
                       
                       <div class="item @activeFurstItem">
                           @if(item.ImageData!=null)
                           { 
                           @Html.Raw("<img class=\"img-responsive\" src=\"data:image/jpeg;base64,"
                                        + Convert.ToBase64String(item.ImageData) + "\" />")
                           }
                           else
                           {
                           <img class="img-responsive" src="~/Img/default.png" />
                           }
                           <div class="carousel-caption">
                               <h3>@item.Name</h3>
                               <p>@item.Description</p>
                           </div>
                       </div>
            activeFurstItem = null;

        }
    </div>


            <!--Стрели переключения слайдов-->
            <a href="#carousel" class="left carousel-control" data-slide="prev"> <span class="glyphicon glyphicon-chevron-left"></span> </a>
            <a href="#carousel" class="right carousel-control" data-slide="next"> <span class="glyphicon glyphicon-chevron-right"></span> </a>
            <!--/Стрели переключения слайдов-->
            
 </div>
    <!--/Слайдер-->
